<p id="notice"><%= notice %></p>

<h1>Welcome to Simon's Guitar Store</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4">

        <div class="thumbnail">

          <% if product.image.url.nil? == false %>
            <%= image_tag product.image.url %>
          <% end %>

          <div class="caption">
            <h3><%= product.name %></h3>
            <h6><%= product.brand %></h6>
            <h6><%= product.rating %></h6>
            <h6>in stock: <%= product.quantity %></h6>
            <h6>cat id: <%= product.category_id %></h6>
            <p><%= product.description %></p>
            <strong><%= number_to_currency product.price %></strong>
            <p><%= link_to 'Show', product, class: "btn btn-primary" %>

            <% if can? :update, product %>
              <%= link_to 'Edit', product, class: "btn btn-primary" %>
              <%= link_to 'Delete', product, class: "btn btn-primary" %></p>
            <% end %>

          </div>

        </div>

      </div>
    <% end %>
  </div>

</div>

<br>
<% if can? :create, Product %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
